<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/ui/fragment">
    <layout width="100%" height="AUTO" spacing="true">
        <vbox stylename="well"
              height="AUTO"
              width="100%"
              expand="description"
              spacing="true"
              align="MIDDLE_CENTER">
            <hbox stylename="v-panel-caption"
                  width="100%">
                <label id="title" stylename="h2"/>
                <button visible="false" id="editBtn" align="MIDDLE_RIGHT"
                        icon="font-icon:EDIT"
                        stylename="borderless-colored"/>
            </hbox>
            <label id="description"
                   align="MIDDLE_CENTER"/>
            <hbox id="resourcesBox">
                <label id="resourceLable" value="msg://resourceLable.value"/>
                <hbox spacing="true" align="MIDDLE_CENTER" id="resourcesBoxFiles" margin="false,false,true,false"/>
            </hbox>
            <vbox visible="false" spacing="true" align="MIDDLE_CENTER" id="submissionsBox"
                  margin="true">
                <label id="submissionsLabel" value="msg://submissionsLabel.value"/>
                <buttonsPanel id="buttonsPanel"
                              alwaysVisible="true">
                    <button primary="true" id="submissionCreateBtn" caption="msg://submissionCreateBtn.caption"/>
                    <button primary="true" id="submissionEditBtn" caption="msg://submissionEditBtn.caption"/>
                    <button stylename="danger" id="submissionRemoveBtn" caption="msg://submissionRemoveBtn.caption"/>
                </buttonsPanel>
                <label id="submissionText"/>
                <linkButton id="submissionFileBtn"/>
                <label visible="false" id="marksLabel"/>
            </vbox>
            <button visible="false" primary="true" id="evaluationBtn" caption="msg://evaluationBtn.caption"/>
        </vbox>
    </layout>
</fragment>
